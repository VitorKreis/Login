<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0"/>
    <a target="_blank" href="https://icons8.com/icon/84848/adicionar"></a>
</head>
<body>
    <nav class="navbar nav-bar-expand" style="background-color: #8257e5;">
        <a target="_blank" href="https://icons8.com/icon/84848/adicionar"></a>
        <div class="container-fluid" >
            <a href="/"><img src="/img/Block.svg"></a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"  href="/Login"><img src="https://img.icons8.com/material/24/undefined/login-rounded-right--v1.png"/>Login</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"  href="/SignUP"><img src="https://img.icons8.com/material/24/undefined/add.png"/>Sing-up</a>
                </li>
                
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item ">
                    <a class="nav-link" href="/Info"><img src="https://img.icons8.com/material/24/undefined/info--v1.png"/>Info</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="card position-absolute top-50 start-50 translate-middle" style="width: 18rem;">
            <form method="post" class="card-body" style="width: 18rem;"  action="/create">
                <input class="form-control"  type="text" name="name" placeholder="Nome Completo"><br>
                <input class="form-control" oninput="mascara(this)" name="cpf" type="text" placeholder="CPF"><br>
                <input class="form-control" type="email" name="email" placeholder="Jose.Lucas@email.com"><br>
                <input class="form-control" type="password" name="password" placeholder="********">
                <button class="btn btn-dark form-control mt-2">Registrar</button>
            </form>
        </div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

<style>

    
    .card{
        border: #121214;
        box-shadow: 10px 10px 12px #8257e5;
        border-radius: 10px;
    }

    body{
        background-color: #121214;
    }
</style>

<script>
    function mascara(i){
   
   var v = i.value;
   
   if(isNaN(v[v.length-1])){ // impede entrar outro caractere que não seja número
      i.value = v.substring(0, v.length-1);
      return;
   }
   
   i.setAttribute("maxlength", "14");
   if (v.length == 3 || v.length == 7) i.value += ".";
   if (v.length == 11) i.value += "-";

}
</script>

